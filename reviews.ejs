<%- include('../partials/header') %>
<div class="flex min-h-screen bg-gray-50">
  <%- include('../partials/sidebar') %>

  <main class="p-6 w-full bg-gray-50">
    <h2 class="text-2xl font-bold text-indigo-700 mb-6">📝 Review Buku</h2>
    <!-- Form Review -->
    <form action="/member/reviews" method="POST" class="bg-white shadow-md rounded-lg p-6 mb-8 max-w-xl space-y-4">
      <h3 class="text-lg font-semibold text-gray-800">Tulis Review</h3>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">ISBN</label>
        <input type="text" name="isbn" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring focus:ring-indigo-300" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Rating (1-5)</label>
        <input type="number" name="rating" min="1" max="5" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring focus:ring-indigo-300" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Komentar</label>
        <textarea name="comment" rows="3" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring focus:ring-indigo-300"></textarea>
      </div>
      <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition">
        💬 Kirim Review
      </button>
    </form>
    <!-- Tabel Review -->
<div class="overflow-x-auto">
  <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md text-sm">
    <thead class="bg-indigo-100 text-indigo-700 text-left">
      <tr>
        <th class="px-4 py-3">Judul Buku</th>
        <th class="px-4 py-3">Rating</th>
        <th class="px-4 py-3">Komentar</th>
        <th class="px-4 py-3">Waktu</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100 text-gray-700">
      <% reviews.forEach(r => { %>
        <tr class="hover:bg-gray-50">
<td class="px-4 py-2">
  <%= r.bookTitle %> <br>
  <span class="text-xs text-gray-500">(ISBN: <%= r.isbn %>)</span>
</td>
          <td class="px-4 py-2"><%= r.rating %> ⭐</td>
          <td class="px-4 py-2"><%= r.comment %></td>
          <td class="px-4 py-2"><%= new Date(r.created_at).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
  </main>
</div>
