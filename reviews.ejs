<%- include('../partials/header') %>
<div class="flex min-h-screen">
  <%- include('../partials/sidebar') %>

  <main class="p-6 w-full bg-gray-50">
    <h2 class="text-2xl font-bold text-indigo-700 mb-6">üìù Review Buku</h2>

    <div class="overflow-x-auto bg-white shadow rounded-lg">
      <table class="min-w-full text-sm text-gray-700">
        <thead class="bg-indigo-100 text-indigo-700 text-left">
          <tr>
            <th class="px-4 py-3">Review ID</th>
            <th class="px-4 py-3">User ID</th>
            <th class="px-4 py-3">ISBN</th>
            <th class="px-4 py-3">Rating</th>
            <th class="px-4 py-3">Komentar</th>
          </tr>
        </thead>
        <tbody>
          <% reviews.forEach(r => { %>
            <tr class="border-b hover:bg-gray-50">
              <td class="px-4 py-2 font-mono text-indigo-600"><%= r.review_id %></td>
              <td class="px-4 py-2"><%= r.user_id %></td>
              <td class="px-4 py-2"><%= r.isbn %></td>
              <td class="px-4 py-2 font-semibold text-yellow-500">
                <%= r.rating %> <span class="text-sm">‚≠ê</span>
              </td>
              <td class="px-4 py-2 text-gray-600"><%= r.comment %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>
</div>
