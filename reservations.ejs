<%- include('../partials/header') %>
<div class="flex min-h-screen bg-gray-50">
  <%- include('../partials/sidebar') %>

  <main class="p-6 w-full">
    <h2 class="text-2xl font-bold text-indigo-700 mb-6">‚è≥ Riwayat Reservasi</h2>

    <div class="overflow-x-auto">
      <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
        <thead class="bg-indigo-100 text-indigo-700 text-left">
          <tr>
            <th class="px-4 py-3">ISBN</th>
            <th class="px-4 py-3">Waktu Reservasi</th>
          </tr>
        </thead>
<tbody class="divide-y divide-gray-100 text-gray-700">
  <% if (reservations.length === 0) { %>
    <tr>
      <td colspan="2" class="text-center py-4 text-gray-500">
        Belum ada reservasi buku.
      </td>
    </tr>
  <% } else { %>
    <% reservations.forEach(rs => { %>
      <tr class="hover:bg-gray-50">
        <td class="px-4 py-2"><%= rs.isbn %></td>
        <td class="px-4 py-2"><%= new Date(rs.queued_at).toLocaleString() %></td>
      </tr>
    <% }) %>
  <% } %>
</tbody>

      </table>
    </div>
  </main>
</div>
